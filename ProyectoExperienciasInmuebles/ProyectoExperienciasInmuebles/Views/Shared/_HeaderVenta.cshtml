@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<link rel="stylesheet" href="~/Content/css/MainNav.css" />
<link rel="stylesheet" href="~/Content/css/Carrusel.css" />
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Monterrico Polo Aparts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-custom">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand fs-3 fw-bold" href="@Url.Action("MenuPrincipal", "PrincipalCliente")" style="font-size: 28px;">
                Monterrico Polo Aparts
            </a>

            @if (ViewBag.ClienteNombreCompleto != null)
            {
                <div class="d-flex align-items-center gap-3 text-white fs-5">
                    <span>Bienvenido, @ViewBag.ClienteNombreCompleto</span>
                    <a href="@Url.Action("MisReservas", "PrincipalCliente")"
                       class="btn btn-outline-light btn-sm"
                       style="min-width: 140px; font-size: 1rem;">
                        Mis Reservas
                    </a>
                    <a href="@Url.Action("MenuPrincipal", "PrincipalCliente")"
                       class="btn btn-outline-light btn-sm"
                       style="min-width: 140px; font-size: 1rem;">
                        Catalogo inmuebles
                    </a>
                    <a href="@Url.Action("CerrarSesion", "Login")"
                       class="btn btn-danger btn-sm"
                       style="min-width: 120px; font-size: 1rem;"
                       onclick="return confirm('¿Estás seguro que quieres cerrar sesión?');">
                        Cerrar Sesión
                    </a>
                </div>
               
            }
            else
            {
                <div class="d-flex align-items-center gap-3">
                    <span class="text-white fs-5">Para reservar debes iniciar sesión:</span>
                    <a href="@Url.Action("Login", "Login")"
                       class="btn btn-success btn-sm"
                       style="min-width: 120px; font-size: 1rem;">
                        Iniciar Sesión
                    </a>
                </div>
            }

            <button class="navbar-toggler ms-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
</header>

@{
    var ocultarCarrusel = ViewBag.OcultarCarrusel as bool? ?? false;
}

@if (!ocultarCarrusel)
{
    <div id="carouselInmuebles" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/image/inmueble.jpg" class="d-block w-100" alt="Imagen 1">
            </div>
            <div class="carousel-item">
                <img src="~/Content/image/inmueble1.jpg" class="d-block w-100" alt="Imagen 2">
            </div>
            <div class="carousel-item">
                <img src="~/Content/image/inmueble2.jpg" class="d-block w-100" alt="Imagen 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselInmuebles" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselInmuebles" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
}
