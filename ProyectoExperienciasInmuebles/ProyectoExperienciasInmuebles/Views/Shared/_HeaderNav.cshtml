@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<link rel="stylesheet" href="~/Content/css/MainNav.css" />
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Monterrico Polo Aparts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-custom">
        @{
            string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        }
        <div class="container">
            <a class="navbar-brand" href="#" style="font-size: 24px"><strong>Monterrico Polo Aparts</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger text-white px-4 rounded ms-3"
                           href="@Url.Action("Logout", "Login")"
                           style="font-weight: bold; font-size: 16px;">
                            🔒 Cerrar Sesión
                        </a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("📌 Inicio", "Index", "Admin", new { area = "" },
                            new { @class = "nav-link px-3 rounded " + (currentAction == "Index" && currentController == "Admin" ? "active" : "") })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("🛠️ Mantenimiento de Inmueble", "ListInmuebles", "Inmueble", new { area = "" },
                            new { @class = "nav-link px-3 rounded " + ((currentController == "Inmueble" && (currentAction == "ListInmuebles" || currentAction == "Details" || currentAction == "Edit")) ? "active" : "") })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("🛠️ Mantenimiento de Clientes", "ListClientes", "Cliente", new { area = "" },
                            new { @class = "nav-link px-3 rounded " + ((currentController == "Cliente" && (currentAction == "ListClientes" || currentAction == "Details" || currentAction == "Edit")) ? "active" : "") })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
