@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Iniciar Sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Content/css/loginDesing.css?v=2">
</head>
<body>
    <div class="left-panel">
        <div class="login-box">
            <h2>Iniciar Sesión</h2>
            <form method="post" action="@Url.Action("Login", "Login")">
                <div>
                    <label for="correo">Correo electrónico</label>
                    <input type="email" id="correo" name="correo" required />
                </div>
                <div>
                    <label for="clave">Contraseña</label>
                    <input type="password" id="clave" name="clave" required />
                </div>
                <button type="submit" class="btn-primary">Ingresar</button>
                <div class="register-link">
                    @Html.ActionLink("¿Aún no te has registrado?", "Registrar", "Login")
                </div>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert-danger">
                        @ViewBag.Mensaje
                    </div>
                }
            </form>
        </div>
    </div>
    <div class="right-panel">
        <img src="~/Content/image/OIP.jpg" alt="Ilustración de acceso" />
    </div>
</body>
</html>
