@model IEnumerable<ProyectoExperienciasInmuebles.Models.Reserva>

@{
    ViewBag.Title = "Mantenimiento Reservas";
    Layout = null;
}

<div>
    @Html.Partial("_HeaderNav")
</div>

<link rel="stylesheet" href="~/Content/css/MantInmueble.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<br />
<div class="list-clientes-container">
    <h2 class="section-title"><strong>MANTENIMIENTO DE RESERVAS</strong></h2>

    <div style="display: flex; gap: 10px; margin-bottom: 20px;">
        <div class="boton-crear-container">
            <a href="@Url.Action("Crear", "Reserva")" class="btn btn-success btn-lg">
                <i class="fa fa-plus"></i> Crear nueva Reserva
            </a>
        </div>

        <div class="boton-exportar-container">
            <a href="@Url.Action("ExportarExcel", "Reserva")" class="btn btn-primary btn-lg">
                <i class="fa fa-file-excel"></i> Exportar a Excel
            </a>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().IdReserva)</th>
            <th>@Html.DisplayNameFor(model => model.First().IdCliente)</th>
            <th>@Html.DisplayNameFor(model => model.First().IdInmueble)</th>
            <th>@Html.DisplayNameFor(model => model.First().fechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.First().fechaFin)</th>
            <th>@Html.DisplayNameFor(model => model.First().estado)</th>
            <th>@Html.DisplayNameFor(model => model.First().fechaReserva)</th>
            <th>@Html.DisplayNameFor(model => model.First().pagototal)</th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdReserva</td>
                <td>@item.IdCliente</td>
                <td>@item.IdInmueble</td>
                <td>@item.fechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@item.fechaFin.ToString("dd/MM/yyyy")</td>
                <td>@item.estado</td>
                <td>@item.fechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@item.pagototal.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Detalles", new { id = item.IdReserva })" title="Detalles">
                        <i class="fa fa-magnifying-glass icon-action"></i>
                    </a>
                    <a href="@Url.Action("Editar", new { id = item.IdReserva })" title="Editar">
                        <i class="fa fa-pen icon-action"></i>
                    </a>
                    <a href="#" onclick="confirmarEliminacion('@Url.Action("Eliminar", new { id = item.IdReserva })'); return false;" title="Eliminar">
                        <i class="fa fa-trash icon-action"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<br />

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmarEliminacion(url) {
        Swal.fire({
            title: '¿Estás seguro de eliminar esta reserva?',
            text: "Esta acción eliminará la reserva permanentemente",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    }
</script>

@if (TempData["Eliminado"] != null && (bool)TempData["Eliminado"])
{
    <script>
        Swal.fire({
            title: '¡Reserva eliminada!',
            text: 'La reserva se ha eliminado correctamente.',
            icon: 'success',
            confirmButtonText: 'Aceptar'
        });
    </script>
}
