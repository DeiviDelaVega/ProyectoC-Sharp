@model IEnumerable<ProyectoExperienciasInmuebles.Models.Reserva>
@using ProyectoExperienciasInmuebles.Models
@{
    ViewBag.Title = "Mis Reservas";
    Cliente cliente = ViewBag.Cliente as Cliente;
    Layout = null;
}

<div>
    @Html.Partial("_HeaderVenta")
</div>
<div class="container mt-5">
    <h2 class="text-center mb-4">Mis Reservas</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Aún no tienes reservas registradas.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID Reserva</th>
                    <th>ID Inmueble</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Estado</th>
                    <th>Fecha de Reserva</th>
                    <th>Total Pagado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.IdReserva</td>
                        <td>@item.IdInmueble</td>
                        <td>@item.fechaInicio.ToString("dd/MM/yyyy")</td>
                        <td>@item.fechaFin.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @(item.estado.ToLower() == "pendiente" ? "bg-warning text-dark" :
                                               item.estado.ToLower() == "confirmado" ? "bg-success" :
                                               item.estado.ToLower() == "cancelado" ? "bg-danger" : "bg-secondary")">
                                @item.estado
                            </span>
                        </td>
                        <td>@item.fechaReserva.ToString("dd/MM/yyyy")</td>
                        <td>S/. @item.pagototal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
